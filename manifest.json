{
  "manifest_version": 3,
  "name": "Caption Everywhere",
  "version": "1.0",
  "description": "Real-time captions for any audio or video in the browser",
  "permissions": ["tabCapture", "scripting", "activeTab", "storage"],
  "host_permissions": ["https://api.groq.com/"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Start Captions"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["overlay.css"],
      "js": ["content.js"]
    }
  ]
}
