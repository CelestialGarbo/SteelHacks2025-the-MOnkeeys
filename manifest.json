{
  "manifest_version": 3,
  "name": "Caption Everywhere",
  "version": "1.0",
  "description": "Real-time captions and summaries for audio.",
  "permissions": ["tabCapture", "storage", "scripting", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["overlay.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}